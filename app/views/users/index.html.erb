<section class="mt-5">

  <%# Currend User %>
  <% if user_signed_in? %>
    <div class="bg-light p-3 rounded">

      <h2>Hi <span class="text-primary"><%= @current_user.name %></span>, Welcome ðŸ‘‹</h2>

      <div class="d-flex justify-content-between align-items-center">
        <h6 class="fst-italic fw-normal"> Create a new post and share with us what's on your mind?</h6>
      
        <%= link_to 'Create Post', "/users/1/posts/new", class: 'btn btn-outline-primary' %>
